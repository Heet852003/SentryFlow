FROM eclipse-temurin:17-jdk-alpine AS builder

WORKDIR /app

RUN apk add --no-cache maven

COPY simulation-engine /app/simulation-engine
RUN cd /app/simulation-engine && mvn -q package -DskipTests -B

FROM eclipse-temurin:17-jre-alpine

WORKDIR /app

COPY --from=builder /app/simulation-engine/target/simulation-engine-2025.1.0.jar /app/app.jar

EXPOSE 8080

ENV VALIDATION_PORT=8080

CMD ["java", "-jar", "/app/app.jar"]
